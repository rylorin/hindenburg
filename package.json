    "@types/node": "^20.12.7",
    "@types/smtp-server": "^3.5.10",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-rxjs": "^5.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.1.1",
    "rxjs": "^7.8.1",
    "stylelint": "^16.3.1",
